<Page
    x:Class="Invaders.HighScores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Invaders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="ms-appx:///Assets/sprites/spacedust1.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="highScoresTitle" 
                   HorizontalAlignment="Center"
                   Margin="0"
                   TextWrapping="Wrap"
                   Text="Leaderboard" 
                   FontSize="35"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Foreground="Yellow"
                   FontFamily="Fonts/space_invaders.ttf#Space Invaders"/>
        <TextBlock x:Name="playerTitle" 
                   HorizontalAlignment="Left"
                   Margin="50,0,0,0"
                   TextWrapping="Wrap"
                   Text="Player" 
                   FontSize="15"
                   VerticalAlignment="bottom"
                   Grid.Row="0"
                   Foreground="Yellow"
                   FontFamily="Fonts/space_invaders.ttf#Space Invaders"/>
        <TextBlock x:Name="scoreTitle" 
                   HorizontalAlignment="Right"
                   Margin="0,0,70,0"
                   TextWrapping="Wrap"
                   Text="Score" 
                   FontSize="15"
                   VerticalAlignment="Bottom"
                   Grid.Row="0"
                   Foreground="Yellow"
                   FontFamily="Fonts/space_invaders.ttf#Space Invaders"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel  x:Name="scoresPanel" Grid.Row="1">



            </StackPanel>
        </ScrollViewer>

       
            <Grid Grid.Row="2" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    
                </Grid.ColumnDefinitions>

                <Button x:Name="scoresBackBtn" 
                Content="Back to Menu" 
                HorizontalAlignment="Stretch" 
                VerticalContentAlignment="Center"
                VerticalAlignment="Center" Click="scoresBackBtn_Click" 
                Width="auto"
                Margin="10,0,10,0"
                BorderBrush="Yellow"
                Foreground="Yellow"
                FontFamily="Fonts/space_invaders.ttf#Space Invaders"
                Height="52"
                
                />
                <Button x:Name="scoresPlayBtn" 
                Content=" New Game" 
                HorizontalAlignment="Stretch" 
                VerticalContentAlignment="Center"
                Grid.Column="1"
                Margin="10,0,10,0"
                VerticalAlignment="Center"
                BorderBrush="Yellow"
                Foreground="Yellow"
                FontFamily="Fonts/space_invaders.ttf#Space Invaders"
                Height="52" Width="auto"
                   
                />

            </Grid>
       



    </Grid>
</Page>
