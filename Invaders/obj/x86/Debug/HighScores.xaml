<Page
    x:Class="Invaders.HighScores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Invaders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"> 

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="highScoresTitle" 
                   HorizontalAlignment="Center"
                   Margin="0"
                   TextWrapping="Wrap"
                   Text="Leaderboard" 
                   FontSize="35"
                   VerticalAlignment="Center"
                   Grid.Row="0"/>
        <TextBlock x:ConnectionId='2' x:Name="playerTitle" 
                   HorizontalAlignment="Left"
                   Margin="50,0,0,0"
                   TextWrapping="Wrap"
                   Text="Player" 
                   FontSize="15"
                   VerticalAlignment="bottom"
                   Grid.Row="0"/>
        <TextBlock x:ConnectionId='3' x:Name="scoreTitle" 
                   HorizontalAlignment="Right"
                   Margin="0,0,50,0"
                   TextWrapping="Wrap"
                   Text="Score" 
                   FontSize="15"
                   VerticalAlignment="Bottom"
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:ConnectionId='5'  x:Name="scoresPanel" Grid.Row="1">
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
                <TextBlock>Row1</TextBlock>
            </StackPanel>
        </ScrollViewer>
        
        <Button x:ConnectionId='4' x:Name="button" Content="Back to Menu" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>







    </Grid>
</Page>

